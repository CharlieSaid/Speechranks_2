{
  "surname_prefixes": {
    "comment": "Map complex surname prefixes to simplified versions",
    "rules": {
      "de la": "dela",
      "del": "del", 
      "de los": "delos",
      "da": "da",
      "van der": "vander",
      "van de": "vande", 
      "von": "von",
      "mac": "mc",
      "o'": "o",
      "le": "le",
      "la": "la",
      "du": "du"
    }
  },
  "punctuation_replacements": {
    "comment": "Characters to remove or replace",
    "rules": {
      "'": "",
      "'": "",
      "'": "",
      "-": "",
      ".": ""
    }
  },
  "unicode_replacements": {
    "comment": "Map accented characters to ASCII equivalents",
    "rules": {
      "á": "a", "à": "a", "ä": "a", "â": "a", "ã": "a",
      "é": "e", "è": "e", "ë": "e", "ê": "e", 
      "í": "i", "ì": "i", "ï": "i", "î": "i",
      "ó": "o", "ò": "o", "ö": "o", "ô": "o", "õ": "o",
      "ú": "u", "ù": "u", "ü": "u", "û": "u",
      "ñ": "n", "ç": "c"
    }
  },
  "transformation_settings": {
    "comment": "Settings for various transformation behaviors",
    "enable_case_normalization": true,
    "enable_whitespace_normalization": true,
    "enable_surname_prefix_normalization": true,
    "enable_punctuation_normalization": true,
    "enable_unicode_normalization": true,
    "enable_space_removal_variation": true,
    "enable_initials_variation": true,
    "enable_case_preserved_variation": true
  }
} 